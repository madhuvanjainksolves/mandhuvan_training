<odoo>
    <record id="view_hr_employee_form_inherit_teacher" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.teacher</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Teacher Info">
                    <group>
                        <field name="is_teacher"/>
                        <field name="subject_specialization"/>
                        <field name="class_ids"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
        <record id="action_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_teacher', '=', True)]</field>
    </record>

</odoo>
