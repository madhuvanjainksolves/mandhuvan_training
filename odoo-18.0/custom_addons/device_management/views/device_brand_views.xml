<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_device_brand_list" model="ir.ui.view">
        <field name="name">device.brand.list</field>
        <field name="model">device.brand</field>
        <field name="arch" type="xml">
            <list string="Device Brands">
                <field name="name"/>
                <field name="device_model_ids" widget="many2many_tags" options="{'no_create': True}"/>
            </list>
        </field>
    </record>

    <record id="view_device_brand_form" model="ir.ui.view">
        <field name="name">device.brand.form</field>
        <field name="model">device.brand</field>
        <field name="arch" type="xml">
            <form string="Device Brand">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Models">
                            <field name="device_model_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="device_type_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_device_brand" model="ir.actions.act_window">
        <field name="name">Device Brands</field>
        <field name="res_model">device.brand</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
