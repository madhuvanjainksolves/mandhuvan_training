<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_device_model_list" model="ir.ui.view">
        <field name="name">device.model.list</field>
        <field name="model">device.model</field>
        <field name="arch" type="xml">
            <list string="Device Models">
                <field name="name"/>
                <field name="device_type_id" string="Device Type"/>
                <field name="device_brand_id" string="Device Brand"/>
            </list>
        </field>
    </record>

    <record id="view_device_model_form" model="ir.ui.view">
        <field name="name">device.model.form</field>
        <field name="model">device.model</field>
        <field name="arch" type="xml">
            <form string="Device Model">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="device_type_id" string="Device Type"/>
                        <field name="device_brand_id" string="Device Brand"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_device_model" model="ir.actions.act_window">
        <field name="name">Device Models</field>
        <field name="res_model">device.model</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
