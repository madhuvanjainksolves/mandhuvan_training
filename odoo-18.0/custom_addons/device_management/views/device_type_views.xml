<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_device_type_list" model="ir.ui.view">
        <field name="name">device.type.list</field>
        <field name="model">device.type</field>
        <field name="arch" type="xml">
            <list string="Device Types" decoration-bf="sequence">
                <field name="name"/>
                <field name="code"/>
                <field name="sequence"/>
            </list>
        </field>
    </record>

    <record id="view_device_type_form" model="ir.ui.view">
        <field name="name">device.type.form</field>
        <field name="model">device.type</field>
        <field name="arch" type="xml">
            <form string="Device Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Type Name"/>
                            <field name="sequence" string="Sequence"/>
                        </group>
                        <group>
                            <field name="code" string="Code"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Models">
                            <field name="device_model_ids">
                                <list editable="bottom">
                                    <field name="name" string="Model Name"/>
                                </list>
                            </field>
                        </page>
                        <page string="Attributes">
                            <field name="device_attribute_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="required"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_device_type" model="ir.actions.act_window">
        <field name="name">Device Types</field>
        <field name="res_model">device.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
