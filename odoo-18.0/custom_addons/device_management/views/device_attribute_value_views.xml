<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_device_attribute_value_list" model="ir.ui.view">
        <field name="name">device.attribute.value.list</field>
        <field name="model">device.attribute.value</field>
        <field name="arch" type="xml">
            <list string="Device Attribute Values">
                <field name="name"/>
                <field name="device_attribute_id"/>
            </list>
        </field>
    </record>

    <record id="view_device_attribute_value_form" model="ir.ui.view">
        <field name="name">device.attribute.value.form</field>
        <field name="model">device.attribute.value</field>
        <field name="arch" type="xml">
            <form string="Device Attribute Value">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="device_attribute_id"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_device_attribute_value" model="ir.actions.act_window">
        <field name="name">Device Attribute Values</field>
        <field name="res_model">device.attribute.value</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
