<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_device_assignment_list" model="ir.ui.view">
        <field name="name">device.assignment.list</field>
        <field name="model">device.assignment</field>
        <field name="arch" type="xml">
            <list string="Device Assignments">
                <field name="name"/>
                <field name="device_id"/>
                <field name="employee_id"/>
                <field name="date_start"/>
                <field name="date_expire"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_device_assignment_form" model="ir.ui.view">
        <field name="name">device.assignment.form</field>
        <field name="model">device.assignment</field>
        <field name="arch" type="xml">
            <form string="Device Assignment">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,draft,approved,returned,rejected"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="device_id"/>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_expire"/>
                            <field name="state"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_device_assignment" model="ir.actions.act_window">
        <field name="name">Device Assignments</field>
        <field name="res_model">device.assignment</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
