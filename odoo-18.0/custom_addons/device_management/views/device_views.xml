<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_device_list" model="ir.ui.view">
        <field name="name">device.device.list</field>
        <field name="model">device.device</field>
        <field name="arch" type="xml">
            <list string="Devices">
                <field name="name"/>
                <field name="device_type_id" string="Device Type"/>
                <field name="device_brand_id" string="Device Brand"/>
                <field name="device_model_id" string="Device Model"/>
                <field name="shared" string="Shared"/>
            </list>
        </field>
    </record>

    <record id="view_device_form" model="ir.ui.view">
        <field name="name">device.device.form</field>
        <field name="model">device.device</field>
        <field name="arch" type="xml">
            <form string="Device">
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Device Name"/>
                            <field name="shared" string="Shared"/>
                            <field name="device_type_id" string="Device Type"/>
                        </group>
                        <group>
                            <field name="device_brand_id" string="Device Brand"/>
                            <field name="device_model_id" string="Device Model"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attributes">
                            <field name="device_attribute_id">
                                <list editable="bottom">
                                    <field name="device_attribute_id" string="Attribute"/>
                                    <field name="device_attribute_value_id" string="Value"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_device" model="ir.actions.act_window">
        <field name="name">Devices</field>
        <field name="res_model">device.device</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
