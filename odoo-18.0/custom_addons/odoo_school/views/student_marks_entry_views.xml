<!-- odoo_school/views/marks_entry_views.xml -->
<odoo>
  <record id="view_marks_entry_form" model="ir.ui.view">
    <field name="name">marks.entry.form</field>
    <field name="model">school.marks.entry</field>
    <field name="arch" type="xml">
      <form string="Marks Entry">
        <sheet>
          <group>
            <field name="name"/>
            <field name="class_id"/>
            <field name="subject_id"/>
          </group>
          <notebook>
            <page string="Marks">
              <field name="marks_ids">
                <list editable="bottom">
                  <field name="student_id"/>
                  <field name="marks"/>
                  <field name="subject_id" invisible="1"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_marks_entry" model="ir.actions.act_window">
    <field name="name">Marks Entry</field>
    <field name="res_model">school.marks.entry</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
