<odoo>
    <record id="view_marks_entry_list" model="ir.ui.view">
        <field name="name">school.marks.entry.list</field>
        <field name="model">school.marks.entry</field>
        <field name="arch" type="xml">
            <list>
                <field name="class_id"/>
                <field name="subject_id"/>
                <field name="date"/>
            </list>
        </field>
    </record>
    <record id="view_marks_entry_form" model="ir.ui.view">
        <field name="name">school.marks.entry.form</field>
        <field name="model">school.marks.entry</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="class_id"/>
                        <field name="subject_id"/>
                        <field name="date"/>
                    </group>
                </sheet>
                <notebook>
                    <page string="Marks">
                        <field name="student_marks_ids">
                            <list editable="bottom">
                                <field name="student_id" readonly="1"/>
                                <field name="marks"/>
                            </list>
                        </field>
                        <button string="Generate Lines" type="object" name="action_create_lines"/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
    <record id="action_marks_entry" model="ir.actions.act_window">
        <field name="name">Marks Entry</field>
        <field name="res_model">school.marks.entry</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
