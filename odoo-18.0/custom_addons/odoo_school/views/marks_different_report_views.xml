<odoo>

    <record id="view_marks_report_pivot" model="ir.ui.view">
        <field name="name">marks.report.pivot</field>
        <field name="model">school.student.marks</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="student_id" type="row"/>
                <field name="subject_id" type="col"/>
                <field name="marks" type="measure"/>
            </pivot>
        </field>
    </record>


    <record id="view_marks_report_pie_chart" model="ir.ui.view">
        <field name="name">marks.report.pie.chart</field>
        <field name="model">school.student.marks</field>
        <field name="arch" type="xml">
            <graph string="Marks Pie Chart" type="pie">
                <field name="marks" type="measure"/>
                <field name="subject_id" type="col"/>
            </graph>
        </field>
    </record>

    <record id="view_marks_report_bar_chart" model="ir.ui.view">
        <field name="name">marks.report.bar.chart</field>
        <field name="model">school.student.marks</field>
        <field name="arch" type="xml">
            <graph string="Marks Bar Chart" type="bar">
                <field name="marks" type="count"/>
                <field name="subject_id" type="col"/>
                <field name="student_id" type="row"/>
            </graph>
        </field>
    </record>



    <record id="action_marks_report" model="ir.actions.act_window">
        <field name="name">Marks Report</field>
        <field name="res_model">school.student.marks</field>
        <field name="view_mode">pivot,graph,list</field>
        <field name="view_id" ref="view_marks_report_pivot"/>
        <field name="views" eval="[
            (ref('view_marks_report_pivot'), 'pivot'),
            (ref('view_marks_report_pie_chart'), 'graph'),
            (ref('view_marks_report_bar_chart'), 'graph'),
            (False, 'list')
        ]"/>
    </record>

</odoo>
