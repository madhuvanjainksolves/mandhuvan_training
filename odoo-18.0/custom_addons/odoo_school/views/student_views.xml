<odoo>
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">school.student.list</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="class_id"/>
                <field name="age"/>
            </list>
        </field>
    </record>
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="class_id"/>
                    </group>
                    <group>
                        <button string="Previous Record" type="object" name="open_class_history"/>
                    </group>
                    <notebook>
                        <page string="Subjects">
                            <field name="subject_ids" widget="many2many_tags" readonly="1"/>
                        </page>
                        <page string="Fees">
                            <field name="fee_ids">
                                <list editable="bottom">
                                    <field name="fee_struct_id"/>
                                    <field name="amount"/>
                                    <field name="paid"/>
                                    <field name="paid_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Marks">
                            <field name="marksentry_ids">
                                <list>
                                    <field name="marks_entry_id"/>
                                    <field name="marks"/>
                                </list>
                            </field>
                        </page>
                        <page string="Class History">
                            <field name="class_history_ids">
                                <list>
                                    <field name="old_class_id"/>
                                    <field name="changed_date"/>
                                    <field name="result_filename"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_school_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_student_list"/>
    </record>
</odoo>
