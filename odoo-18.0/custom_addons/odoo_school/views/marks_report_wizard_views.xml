<odoo>
    <record id="view_marks_report_wizard_form" model="ir.ui.view">
        <field name="name">marks.report.wizard.form</field>
        <field name="model">marks.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Marks Report Wizard">
                <sheet>
                    <group>
                        <field name="class_id"/>
                        <field name="subject_id" domain="[('id', 'in', class_id.subject_ids)]"/>
                    </group>
                    <footer>
                        <button string="Generate Report" type="object" name="action_generate_report" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_marks_report_wizard" model="ir.actions.act_window">
        <field name="name">Marks Report Wizard</field>
        <field name="res_model">marks.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
