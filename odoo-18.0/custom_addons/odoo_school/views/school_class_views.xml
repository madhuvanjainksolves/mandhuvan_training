<odoo>
    <record id="view_class_list" model="ir.ui.view">
        <field name="name">school.class.list</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>
    <record id="view_class_form" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="subject_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="fee_structure_ids">
                            <list editable="bottom">
                                <field name="name"/>
                                <field name="amount"/>
                            </list>
                        </field>
                    </group>
                    <field name="student_ids" nolabel="1">
                        <list>
                            <field name="name"/>
                            <field name="age"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_class_list"/>
    </record>
</odoo>
