<odoo>
    <!-- List View -->
    <record id="view_student_fee_list" model="ir.ui.view">
        <field name="name">school.fee.list</field>
        <field name="model">school.fee</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="fee_struct_id"/>
                <field name="amount"/>
                <field name="paid"/>
                <field name="paid_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_student_fee_form" model="ir.ui.view">
        <field name="name">school.fee.form</field>
        <field name="model">school.fee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="fee_struct_id" readonly="1"/>
                        <field name="amount" readonly="1"/>
                    </group>
                    <group>
                        <field name="paid"/>
                        <field name="paid_date"/>
                        <field name="state" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student_fee" model="ir.actions.act_window">
        <field name="name">Student Fees</field>
        <field name="res_model">school.fee</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
