<odoo>
    <record id="view_fee_list" model="ir.ui.view">
        <field name="name">fee.list</field>
        <field name="model">school.fee</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="month"/>
                <field name="amount"/>
            </list>
        </field>
    </record>

    <record id="view_fee_form" model="ir.ui.view">
        <field name="name">fee.form</field>
        <field name="model">school.fee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="student_id"/>
                    <field name="month"/>
                    <field name="amount"/>
                </sheet>
            </form>
        </field>
    </record>

    <!--Window Action-->
    <record id="action_school_fee" model="ir.actions.act_window">
        <field name="name">Student Fee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.fee</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Student need to submit fees.
            </p>
        </field>
    </record>
</odoo>
