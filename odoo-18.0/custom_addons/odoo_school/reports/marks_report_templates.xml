<!-- odoo_school/reports/marks_report_templates.xml -->
<odoo>
  <template id="marks_report_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="doc">
        <div>
          <h2>Marks Report: <t t-esc="data.get('class_name')"/> - <t t-esc="data.get('subject_name')"/></h2>
          <table class="table table-sm">
            <thead>
              <tr><th>Student</th><th>Marks</th></tr>
            </thead>
            <tbody>
              <t t-foreach="doc" t-as="m">
                <tr>
                  <td><t t-esc="m.student_id.name"/></td>
                  <td><t t-esc="m.marks"/></td>
                </tr>
              </t>
            </tbody>
          </table>
        </div>
      </t>
    </t>
  </template>
</odoo>
