<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree/List View -->
    <record id="view_hospital_appointment_list" model="ir.ui.view">
        <field name="name">hospital_appointment_list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list>
                <field name="patient_id"/>
                <field name="gender"/>
                <field name="booking_date"/>
                <field name="appointment_time"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital_appointment_search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
                <field name="patient_id"/>
                <field name="doctor_ids"/>
                <field name="state"/>
                <filter name="filter_confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>
                <filter name="filter_done" string="Done" domain="[('state','=','done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital_appointment_form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="gender"/>
                            <field name="booking_date"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                            <field name="doctor_ids" widget="many2many_tags"/>
                            <field name="ref"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done,cancelled"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first appointment!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_appointment"
              name="Appointments"
              action="action_hospital_appointment"
              parent="menu_patient_master"
              sequence="2"/>
</odoo>
