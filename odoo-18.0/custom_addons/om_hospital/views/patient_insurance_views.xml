<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="view_hospital_patient_insurance_list" model="ir.ui.view">
        <field name="name">hospital.patient.insurance.list</field>
        <field name="model">hospital.patient.insurance</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/> <!-- From hospital.patient -->
                <field name="age"/>  <!-- From hospital.patient -->
                <field name="gender"/> <!-- From hospital.patient -->
                <field name="insurance_company"/>
                <field name="policy_number"/>
                <field name="coverage_amount"/>
                <field name="expiry_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_patient_insurance_form" model="ir.ui.view">
        <field name="name">hospital.patient.insurance.form</field>
        <field name="model">hospital.patient.insurance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Patient Info">
                            <field name="patient_id"/>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="phone"/>
                        </group>
                        <group string="Insurance Info">
                            <field name="insurance_company"/>
                            <field name="policy_number"/>
                            <field name="coverage_amount"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_patient_insurance" model="ir.actions.act_window">
        <field name="name">Patient Insurances</field>
        <field name="res_model">hospital.patient.insurance</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_patient_insurance"
              name="Patient Insurance"
              parent="menu_patient_master"
              action="action_hospital_patient_insurance"
              sequence="5"/>
</odoo>
