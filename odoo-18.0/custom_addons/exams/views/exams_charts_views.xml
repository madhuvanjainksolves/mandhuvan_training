<odoo>
    <!-- Pivot View -->
    <record id="view_exams_exam_pivot" model="ir.ui.view">
        <field name="name">exams.exam.pivot</field>
        <field name="model">exams.exam</field>
        <field name="arch" type="xml">
            <pivot string="Exams Pivot">
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="marks" type="measure"/>
                <field name="exam_date" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="action_exams_exam_pivot" model="ir.actions.act_window">
        <field name="name">Pivot View Exams</field>
        <field name="res_model">exams.exam</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="view_exams_exam_pivot"/>
    </record>

    <!-- Pie Chart View -->
    <record id="view_exams_exam_pie" model="ir.ui.view">
        <field name="name">exams.exam.pie</field>
        <field name="model">exams.exam</field>
        <field name="arch" type="xml">
            <graph string="Exams Pie Chart" type="pie">
                <field name="subject_id" type="row"/>
                <field name="marks" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_exams_exam_pie" model="ir.actions.act_window">
        <field name="name">Pie Chart Exams</field>
        <field name="res_model">exams.exam</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_exams_exam_pie"/>
    </record>

    <!-- Bar Chart / Graph View -->
    <record id="view_exams_exam_graph" model="ir.ui.view">
        <field name="name">exams.exam.graph</field>
        <field name="model">exams.exam</field>
        <field name="arch" type="xml">
            <graph string="Exams Graph" type="bar">
                <field name="exam_date" type="row"/>
                <field name="marks" type="measure"/>
                <field name="subject_id" type="col"/>
            </graph>
        </field>
    </record>

    <record id="action_exams_exam_graph" model="ir.actions.act_window">
        <field name="name">Graph View Exams</field>
        <field name="res_model">exams.exam</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_exams_exam_graph"/>
    </record>

</odoo>