<odoo>
    <record id="view_exams_subject_list" model="ir.ui.view">
        <field name="name">exams.subjects.list</field>
        <field name="model">exams.subjects</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_exams_subject_form" model="ir.ui.view">
        <field name="name">exams.subjects.form</field>
        <field name="model">exams.subjects</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_exams_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">exams.subjects</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
