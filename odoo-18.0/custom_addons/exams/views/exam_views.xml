<odoo>
    <record id="view_school_exam_list" model="ir.ui.view">
        <field name="name">exams.exam.list</field>
        <field name="model">exams.exam</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="marks"/>
                <field name="exam_date"/>
            </list>
        </field>
    </record>

    <record id="view_exams_exam_form" model="ir.ui.view">
        <field name="name">exams.exam.form</field>
        <field name="model">exams.exam</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="subject_id"/>
                        <field name="marks"/>
                        <field name="exam_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_exams_exam" model="ir.actions.act_window">
        <field name="name">Exams</field>
        <field name="res_model">exams.exam</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
